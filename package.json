{
  "name": "apollo-upload-server",
  "version": "5.0.0",
  "description": "Enhances Apollo GraphQL Server for intuitive file uploads via GraphQL mutations.",
  "license": "MIT",
  "author": {
    "name": "Jayden Seric",
    "email": "me@jaydenseric.com",
    "url": "https://jaydenseric.com"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/jaydenseric/apollo-upload-server.git"
  },
  "homepage": "https://github.com/jaydenseric/apollo-upload-server#readme",
  "bugs": "https://github.com/jaydenseric/apollo-upload-server/issues",
  "keywords": [
    "apollo",
    "server",
    "graphql",
    "file",
    "upload",
    "multipart",
    "koa",
    "express"
  ],
  "files": [
    "lib",
    "!lib/test.*"
  ],
  "main": "lib",
  "module": "lib/index.mjs",
  "engines": {
    "node": ">=8.5"
  },
  "peerDependencies": {
    "graphql": "^0.13.1"
  },
  "dependencies": {
    "busboy": "^0.2.14",
    "object-path": "^0.11.4"
  },
  "devDependencies": {
    "@babel/cli": "^7.0.0-beta.49",
    "@babel/core": "^7.0.0-beta.49",
    "@babel/preset-env": "^7.0.0-beta.49",
    "eslint": "^4.19.1",
    "eslint-config-prettier": "^2.9.0",
    "eslint-plugin-import": "^2.12.0",
    "eslint-plugin-node": "^6.0.1",
    "eslint-plugin-prettier": "^2.6.0",
    "express": "^4.16.3",
    "form-data": "^2.3.2",
    "graphql": "^0.13.2",
    "husky": "^0.14.3",
    "koa": "^2.5.1",
    "lint-staged": "^7.1.3",
    "node-fetch": "^2.1.2",
    "npm-run-all": "^4.1.3",
    "prettier": "^1.13.4",
    "tap": "^12.0.1",
    "watch": "^1.0.2"
  },
  "scripts": {
    "build:clean": "rm -r lib; mkdir lib",
    "build:mjs": "BABEL_ESM=1 babel src -d lib --keep-file-extension",
    "build:js": "babel src -d lib",
    "build:prettier": "prettier 'lib/**/*.{mjs,js}' --write",
    "lint:eslint": "eslint . --ext mjs,js",
    "lint:prettier": "prettier '*.{json,md}' -l",
    "tap:mjs": "node --experimental-modules --no-warnings lib/test | tap-mocha-reporter spec",
    "tap:js": "node lib/test | tap-mocha-reporter spec",
    "watch": "watch 'npm test --silent' src --interval 1",
    "test": "FORCE_COLOR=1 TAP_COLORS=1 npm-run-all build:clean -p build:mjs build:js -s build:prettier -p lint:* tap:* -c --aggregate-output --silent",
    "prepublishOnly": "npm test",
    "precommit": "lint-staged"
  },
  "lint-staged": {
    "*.{mjs,js}": "eslint",
    "*.{json,md}": "prettier -l"
  },
  "eslintIgnore": [
    "lib"
  ],
  "eslintConfig": {
    "parserOptions": {
      "sourceType": "script",
      "ecmaVersion": 2018
    },
    "env": {
      "es6": true,
      "node": true
    },
    "plugins": [
      "import",
      "node",
      "prettier"
    ],
    "extends": [
      "eslint:recommended",
      "plugin:import/recommended",
      "plugin:node/recommended",
      "prettier"
    ],
    "rules": {
      "require-jsdoc": "warn",
      "valid-jsdoc": [
        "error",
        {
          "requireReturn": false
        }
      ],
      "require-await": "error",
      "no-return-await": "error",
      "arrow-body-style": "error",
      "prefer-arrow-callback": "error",
      "curly": [
        "error",
        "multi"
      ],
      "prefer-destructuring": "error",
      "import/first": "error",
      "import/newline-after-import": "error",
      "import/no-useless-path-segments": "error",
      "import/order": "error",
      "node/no-unsupported-features": "error",
      "prettier/prettier": "error"
    },
    "overrides": [
      {
        "files": [
          "*.mjs"
        ],
        "parserOptions": {
          "sourceType": "module"
        },
        "rules": {
          "node/no-unsupported-features": [
            "error",
            {
              "ignores": [
                "modules"
              ]
            }
          ]
        }
      }
    ]
  },
  "prettier": {
    "proseWrap": "never",
    "singleQuote": true,
    "semi": false
  }
}
